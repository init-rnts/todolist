<%- include("header") %>    
    <div class="box" id="heading">
        <h1>
            <%= day %>
        </h1>
    </div>
    <div class="box">

        <% for (todo of todos) { %>
            <div class="item">
                <input type="checkbox">
                <p><%= todo %></p>
            </div>
        <% } %>
        <form class="item" action="/" method="post">
            <input type="text" name="todoName" placeholder="New ToDo" autocomplete="off">
            <button type="submit" name="list" value="<%= day %>">+</button>
        </form>    
    </div>
<%- include("footer") %> 